@using MusiCom.Core.Models.New;
@model NewDetailsViewModel

@{
    ViewBag.Title = "New Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            @{var base64 = Convert.ToBase64String(Model.TitlePhoto);
            var imageSrc = string.Format("data:image/png;base64,{0}", base64);}
            <img class="card-img-top" style="width: 20rem;"
                 src="@imageSrc" alt="House Image">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Title</u></p>
            <p>Genre: <b>@Model.Genre.Name</b></p>
            <p>@Model.Content</p>
            <p>
                Tags: 
                @foreach (var tag in Model.Tags)
                {
                    <b>@tag.Name </b>
                }
            </p>
            @*<p><i>(@(Model.IsRented ? "Rented" : "Not Rented"))</i></p>
            <div class="form-inline">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-warning" asp-controller="Houses" asp-action="Edit"
                   asp-route-id="@Model.Id">Edit</a>
                    <a class="ml-2 btn btn-danger" asp-controller="Houses" asp-action="Delete"
                   asp-route-id="@Model.Id">Delete</a>
                    @if (!Model.IsRented)
                    {
                        <form class="ml-2" asp-controller="Houses"
                      asp-action="Rent" asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-primary" type="submit" value="Rent" />
                        </form>
                    }
                    else
                    {
                        <form class="ml-2" asp-controller="Houses" asp-action="Leave"
                      asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-primary" type="submit" value="Leave" />
                        </form>
                    }
                }
            </div>*@
            <p></p>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Editor Info</h5>
                    <p class="card-text">Email:  @Model.Editor.Email</p>
                    <p class="card-text">Name: @Model.Editor.FirstName @Model.Editor.LastName</p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.NewComments.Count() == 0)
{
    <h2 class="text-center">No comments yet!</h2>
    <h5 class="text-center">Be the First to Comment?</h5>
}

<p></p>

<p>
<form asp-controller="Comment" asp-action="Create" method="post" asp-route-id="@Model.Id">
    <div class="form-group card-header row">
        <h5>Send a new comment</h5>
    </div>
    <div class="col-8">
        <label>Comment: </label>
        <textarea asp-for="@Model.CurrentComment.Content" class="form-control" rows="3"></textarea>
    </div>
    <div class="col-4">
        User Name: @User?.Identity?.Name<br />
        <input class="btn btn-primary mt-2 float-lg-right" type="submit" value="Send" />
    </div>
</form>
</p>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<div class="container">
    <div class="row">
        @foreach (var comment in Model.NewComments)
        {
            <div class="col-md-8">
                <div class="media g-mb-30 media-comment">
                    <img class="d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Image Description">
                    <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                        <div class="g-mb-15">
                            <h5 class="h5 g-color-gray-dark-v1 mb-0">@comment.User.FirstName @comment.User.LastName</h5>
                            <span class="g-color-gray-dark-v4 g-font-size-12">@comment.DateOfPost</span>
                        </div>

                        <p>
                            @comment.Content
                        </p>

                        <ul class="list-inline d-sm-flex my-0">
                            <li class="list-inline-item g-mr-20">
                                <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                                    <i class="fa fa-thumbs-up g-pos-rel g-top-1 g-mr-3"></i>
                                    @comment.NumberOfLikes
                                </a>
                            </li>
                            <li class="list-inline-item g-mr-20">
                                <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                                    <i class="fa fa-thumbs-down g-pos-rel g-top-1 g-mr-3"></i>
                                    @comment.NumberOfDislikes
                                </a>
                            </li>
                            @*<li class="list-inline-item ml-auto">
                                <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                                    <i class="fa fa-reply g-pos-rel g-top-1 g-mr-3"></i>
                                    Reply
                                </a>
                            </li>*@
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>