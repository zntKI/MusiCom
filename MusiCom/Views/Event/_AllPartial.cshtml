@using MusiCom.Core.Models.Event;
@using System.Security.Claims;
@model IEnumerable<EventAllViewModel>

@{
    var events = Model.ToList();
    bool isLeft = true;
}

<hr style="line-height: 20px" />
<link href="~/css/event_all_partial.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
<div class="container">
    @foreach (var eventt in events)
    {
        if (isLeft)
        {
            <div class="row align-items-center event-block no-gutters margin-40px-bottom">
                <div class="col-lg-5 col-sm-12">
                    <div class="position-relative">
                        @{
                            var base64 = Convert.ToBase64String(eventt.Image);
                            var imageSrc = string.Format("data:image/png;base64,{0}", base64);
                        }
                        <img src="@imageSrc" style="width: 450px; height: 280px;" alt="">
                        <div class="events-date">
                            <div class="font-size28">@eventt.Date.Day</div>
                            <div class="font-size14">@eventt.Date.ToString("MMMM")</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7 col-sm-12">
                    <div class="padding-60px-lr md-padding-50px-lr sm-padding-30px-all xs-padding-25px-all">
                        <h5 class="margin-15px-bottom md-margin-10px-bottom font-size22 md-font-size20 xs-font-size18 font-weight-500"><a asp-controller="Event" asp-action="Details" asp-route-id="@eventt.Id" class="text-theme-color">@eventt.Title</a></h5>
                        <ul class="event-time margin-10px-bottom md-margin-5px-bottom">
                            <li><i class="far fa-clock margin-10px-right"></i>@eventt.Date.TimeOfDay</li>
                            <li><i class="fas fa-user margin-5px-right"></i> Artist: @eventt.Artistt.ArtistName</li>
                        </ul>
                        @if (User.IsInRole("Artist") &&
                        eventt.Artistt.Id == Guid.Parse(User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value ?? "00000000-0000-0000-0000-000000000000"))
                        {
                            <a class="btn btn-warning" asp-controller="Event" asp-action="Edit" asp-route-id="@eventt.Id">Edit</a>
                        }
                        @if ((User.IsInRole("Admin") || User.IsInRole("Artist")) && 
                        eventt.Artistt.Id == Guid.Parse(User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value ?? "00000000-0000-0000-0000-000000000000"))
                        {
                            <a class="btn btn-danger" asp-controller="Event" asp-action="Delete" asp-route-id="@eventt.Id">Delete</a>
                        }
                    </div>
                </div>
            </div>

            isLeft = false;
        }
        else
        {
            <div class="row align-items-center event-block no-gutters margin-40px-bottom">
                <div class="col-lg-7 order-2 order-lg-1">
                    <div class="padding-60px-lr md-padding-50px-lr sm-padding-30px-all xs-padding-25px-all">
                        <h5 class="margin-15px-bottom md-margin-10px-bottom font-size22 md-font-size20 xs-font-size18 font-weight-500"><a asp-controller="Event" asp-action="Details" asp-route-id="@eventt.Id" class="text-theme-color">@eventt.Title</a></h5>
                        <ul class="event-time margin-10px-bottom md-margin-5px-bottom">
                            <li><i class="far fa-clock margin-10px-right"></i>@eventt.Date.TimeOfDay</li>
                            <li><i class="fas fa-user margin-5px-right"></i> Artist: @eventt.Artistt.ArtistName</li>
                        </ul>
                        <a class="butn small margin-10px-top md-no-margin-top" href="event-details.html">Read More <i class="fas fa-long-arrow-alt-right margin-10px-left"></i></a>
                    </div>
                </div>
                <div class="col-lg-5 order-1 order-lg-2">
                    <div class="position-relative">
                        @{
                            var base64 = Convert.ToBase64String(eventt.Image);
                            var imageSrc = string.Format("data:image/png;base64,{0}", base64);
                        }
                        <img src="@imageSrc" style="width: 450px; height: 280px;" alt="">
                        <div class="events-date">
                            <div class="font-size28">@eventt.Date.Day</div>
                            <div class="font-size14">@eventt.Date.ToString("MMMM")</div>
                        </div>
                    </div>
                </div>
            </div>

            isLeft = true;
        }
    }
</div>