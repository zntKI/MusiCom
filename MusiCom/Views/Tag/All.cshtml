@using MusiCom.Core.Models.Tag;
@model IEnumerable<TagNewAllViewModel>

@{
    ViewData["Title"] = $"All Tags ({Model.Count()})";
}

<div class="card">
    <h3 class="card-header text-center font-weight-bold text-uppercase py-4">
        @ViewData["Title"]
    </h3>
    <a style="align-content: center; margin-top: 5px; margin-bottom: 5px" class="btn btn-success" asp-controller="Tag" asp-action="Add">Add</a>
    <div class="card-body">
        <div id="table" class="table-editable">
            <table class="table table-bordered table-responsive-md table-striped text-center">
                <thead>
                    <tr>
                        <th class="text-center">Tag Name</th>
                        <th class="text-center">Date of Creation</th>
                        <th class="text-center">Edit</th>
                        <th class="text-center">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td class="pt-3-half">@tag.Name</td>
                            <td class="pt-3-half">@tag.DateOfCreation</td>
                                <td>
                                    <div class="text-center">
                                        <a class="btn btn-warning" asp-controller="Tag" asp-action="Edit" asp-route-id="@tag.Id">Edit</a>
                                    </div>
                                </td>
                                <td>
                                    <form class="text-center" asp-controller="Tag" asp-action="Remove" id="myForm" onsubmit="sureSend(event)" asp-route-id="@tag.Id">
                                        <input type="submit" class="btn btn-danger" value="Delete" />
                                    </form>
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/sure_delete.js"></script>