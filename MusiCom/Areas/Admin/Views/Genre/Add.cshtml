@using MusiCom.Core.Models.Genre;
@model GenreViewModel

@{
    ViewData["Title"] = "Create a Genre";
}


<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="genre" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Name" class="form-label">Genre Name</label>
                    <input asp-for="@Model.Name" class="form-control" autocomplete="genrename" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="add-submit" type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}