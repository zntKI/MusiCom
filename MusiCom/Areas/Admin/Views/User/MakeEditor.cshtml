@using MusiCom.Core.Models.Admin.User;
@model EditorAddViewModel

@{
    ViewData["Title"] = "Hire an Editor";
}


<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="user" method="post" asp-route-id="@Model.UserId">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Salary" class="form-label">Salary</label>
                    <input asp-for="@Model.Salary" class="form-control" autocomplete="salary" aria-required="true" />
                    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="add-submit" type="submit" class="btn btn-primary">Hire</button>
                </div>
            </form>
        </section>
    </div>
</div>
